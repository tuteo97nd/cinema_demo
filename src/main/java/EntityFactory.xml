<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="connection.url">jdbc:mysql://localhost:3306/booking_cinema</property>
    <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
      <mapping class="com.dts.cinema_demo.Domain.Entities.Team2ActorsEntity"/>
      <mapping class="com.dts.cinema_demo.Domain.Entities.Team2CategoriesEntity"/>
      <mapping class="com.dts.cinema_demo.Domain.Entities.Team2DirectorsEntity"/>
      <mapping class="com.dts.cinema_demo.Domain.Entities.Team2MoviesEntity"/>
      <mapping class="com.dts.cinema_demo.Domain.Entities.Team2MovietheaterEntity"/>
      <mapping class="com.dts.cinema_demo.Domain.Entities.Team2RoomEntity"/>
      <mapping class="com.dts.cinema_demo.Domain.Entities.Team2ScreeningEntity"/>
      <mapping class="com.dts.cinema_demo.Domain.Entities.Team2SeatEntity"/>
      <mapping class="com.dts.cinema_demo.Domain.Entities.Team2TicketEntity"/>
      <!-- <property name="connection.username"/> -->
    <!-- <property name="connection.password"/> -->

    <!-- DB schema will be updated if needed -->
    <!-- <property name="hbm2ddl.auto">update</property> -->
  </session-factory>
</hibernate-configuration>